{
	"version": "1.0",
	"label": "app_name",
	"paths": ["publisher"],
	"services": ["publisher"],

	"architecture": {"engine": "starlark", "version": 2},
	"execute": ["publisher.star"],

	"database": {
		"schema": 1,
		"file": "publisher.db",
		"create": {"function": "database_create"}
	},

	"icons": [
		{"action": "", "label": "app_name", "file": "images/icon.svg"}
	],

	"actions": {
		"": {"file": "web/dist/index.html"},
		"assets": {"files": "web/dist/assets"},
		"images": {"files": "web/dist/images"},
		"list": {"function": "action_list"},
		"view/:id": {"function": "action_view"},
		"create": {"function": "action_create"},
		":app/version/create": {"function": "action_version_create"}
	},

	"events": {
		"information": {"function": "event_information", "anonymous": true},
		"get": {"function": "event_get", "anonymous": true},
		"version": {"function": "event_version", "anonymous": true}
	}
}
